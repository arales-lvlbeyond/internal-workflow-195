<workflow xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://levelsbeyond.com/schema/workflow"
	xmlns:nimbus="http://levelsbeyond.com/schema/workflow/nimbus"
	xsi:schemaLocation="http://levelsbeyond.com/schema/latest http://levelsbeyond.com/schema/latest/studio.xsd"
	id="_addProjectToCollection"
	name="Add Project To Collection"
	executionLabelExpression="Add Project To Collection | Project: ${asset.name} | Collection: ${collection.name}"
	subjectDOClassName="Project"
	resultDataDef="collectionItem"
	showInUserInterface="false"
	sdkVersion="5.21"
	>
	
	<initialStepName>check if project is in collection</initialStepName>
	
	
	<noopStep name="check if project is in collection"
		executionLabelExpression="project already in collection? ${inCollection}"
		pctComplete="33"
		>
		<transition condition="${inCollection}">
			<targetStepName>project in collection</targetStepName>
		</transition>
		<transition condition="true">
			<targetStepName>add project to collection</targetStepName>
		</transition>
	</noopStep>
	
	
	<saveDataObjectStep name="add project to collection"
		targetDataObjectClass="AssetCollectionItem"
		resultDataDef="collectionItem"
		pctComplete="99"
		nextStep="end"
		>
		<property name="collection">${collection}</property>
		<property name="project">${asset}</property>
		<property name="index">${collectionItemIndex}</property>
	</saveDataObjectStep>
	
	
	<noopStep name="project in collection"
		executionLabelExpression="${asset.name} is already in the collection ${collection.name}"
		pctComplete="99"
		nextStep="end"
		/>
	
	
	<!-- ................................................... End Steps .................................................... -->
	<noopStep name="end"    pctComplete="100"/>
	
	
	<!-- ............................................... Context Data Defs ................................................ -->
	<!-- .......... Input Variables .......... -->
	<contextDataDef name="collection"           dataType="Data Object"  required="true"     userInput="true">
		<picklist>
			<dataObjectSearch dataObjectClass="AssetCollection">
				<searchPath>name</searchPath>
			</dataObjectSearch>
		</picklist>
	</contextDataDef>
	
	<!-- ....... Processing Variables ........ -->
	<contextDataDef name="asset"                dataType="Data Object"  defaultDataExpression="${subject}"/>
	<contextDataDef name="inCollection"         dataType="Boolean"      defaultDataExpression="${asset.collectionMemberships.![collection].?[id == #root.collection.id].size() &gt; 0}"/>
	<contextDataDef name="collectionItemIndex"  dataType="Integer"      defaultDataExpression="${collection.items.size() + 1}"/>
	<contextDataDef name="collectionItem"       dataType="Data Object"/>
	
</workflow>
