<workflow xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://levelsbeyond.com/schema/workflow"
    xsi:schemaLocation="
    http://levelsbeyond.com/schema/latest http://levelsbeyond.com/schema/latest/studio.xsd
    "
    
    id="_moveToCustomRepo"
    name="Move File To CustomRepo"
    executionLabelExpression="Move File ${fileToIngest.name} To CustomRepo ${repoDirectoryString}"
    description="
        Custom Repo Code, this moves fileToIngest to the ingest location, deletes the original, 
        then returns the moved file for use in the parent.
    "
    subjectDOClassName=""
    deadlineExpression=""
    showInUserInterface="false"
    resultDataDef="fileInCustomRepo"
    sdkVersion="4.2">
    
    <initialStepName>begin</initialStepName>
    
    <noopStep name="begin">
        
        <transition condition="${repoDirectoryString != null}">
            <targetStepName>copy file</targetStepName>
        </transition>
        <transition condition="true">
            <targetStepName>fail</targetStepName>
        </transition>
    </noopStep>
    
    <copyFileStep
        name="copy file"
        sourceFileExpression="${fileToIngest}" 
        targetDirectoryExpression="${repoDirectoryString}" 
        resultDataDef="fileInCustomRepo">
        
        <transition condition="true">
            <targetStepName>remove fileToIngest</targetStepName>
        </transition>
    </copyFileStep>
    
    <deleteFileStep
        name="remove fileToIngest"
        sourceFilesExpression="${fileToIngest}" >
        
        <transition condition="true">
            <targetStepName>end</targetStepName>
        </transition>
    </deleteFileStep>
    
    <failWorkflowStep
        name="fail"
        reasonExpression="repoDirectoryString is null, cannot continue" >
        
        <transition condition="true">
            <targetStepName>end</targetStepName>
        </transition>
    </failWorkflowStep>

    <noopStep name="end"/>
    
    <contextDataDef name="repoDirectoryString" dataType="String"/>
    <contextDataDef name="fileToIngest" dataType="File"/>
    <contextDataDef name="fileInCustomRepo" dataType="File"/>
    
</workflow>
